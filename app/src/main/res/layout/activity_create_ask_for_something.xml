<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/afs_heading"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/afs_heading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/afs_create_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/create_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/afs_heading" />

        <EditText
            android:id="@+id/afs_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/afs_create_title"
            app:layout_constraintTop_toBottomOf="@+id/afs_heading" />

        <ImageButton
            android:id="@+id/afs_edit_title_button"
            android:layout_width="73dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/afs_edit_title"
            app:layout_constraintTop_toBottomOf="@+id/afs_heading"
            android:src="@drawable/add_icon" />





    </android.support.constraint.ConstraintLayout>

</ScrollView>